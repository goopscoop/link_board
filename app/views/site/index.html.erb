<div class="col-md-6 col-md-offset-3">
  <h1>Links</h1>
  <hr>
  <ul>
    <% @posts.each do |p| %>
      <li>
      <p> <%= link_to p.title, p.link %></p>
      <p><%= link_to "Edit", edit_post_path(p.id) %> |
       <%= link_to "Delete", p, :method => "delete", :confirm => "Are you sure?" %></p>
      </li>
    <% end %>
  </ul>
</div>

