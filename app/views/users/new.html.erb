<div class="col-md-6 col-md-offset-3">
  <h1>Sign Up</h1>

  <%= bootstrap_form_for :user do |f| %>
    <%= f.text_field :email, placeholder: "Enter Your Email", icon: "envelope" %>
    <%= f.text_field :name, placeholder: "Enter Your Name", icon: "user" %>
    <%= f.password_field :password, placeholder: "Create Your Password", icon: 'lock' %>
    <%= f.submit "Sign Up" %>
  <% end %>

</div>

